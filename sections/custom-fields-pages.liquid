{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
{%- endstyle -%}
<div class="color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width page-width--narrow section-{{ section.id }}-padding">
        {% render "blocks.custom_fields" with resource_type: "pages", blocks: section.blocks %}
    </div>
</div>

{% schema %}
  {
    "name": {
        "en": "Custom Fields"
    },
    "settings": [
        {
            "type": "paragraph",
            "content": "[View Documentation](https:\/\/custom-fields.docs.bonify.io\/)"
        },
        {
            "type": "paragraph",
            "content": "[Edit Custom Fields](https:\/\/customfields.bonify.io\/dashboard\/shirtestbuy.myshopify.com\/pages\/configure)"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        },
        {
            "type": "select",
            "id": "color_scheme",
            "options": [
                {
                "value": "accent-1",
                "label": "t:sections.all.colors.accent_1.label"
                },
                {
                "value": "accent-2",
                "label": "t:sections.all.colors.accent_2.label"
                },
                {
                "value": "background-1",
                "label": "t:sections.all.colors.background_1.label"
                },
                {
                "value": "background-2",
                "label": "t:sections.all.colors.background_2.label"
                },
                {
                "value": "inverse",
                "label": "t:sections.all.colors.inverse.label"
                }
            ],
            "default": "background-1",
            "label": "t:sections.all.colors.label"
        }
    ],
    "templates": [
        "page"
    ],
    "presets": [
        {
            "name": "Custom Fields",
            "blocks": []
        }
    ],
    "blocks": [
        {
            "type": "cf_w_tabs2",
            "name": {
                "en": "Tabs "
            },
            "settings": [
                {
                    "type": "select",
                    "id": "key",
                    "label": "Select a Widget",
                    "options": [
                        {
                            "value": "custom_fields.tabs_faqs",
                            "label": "tabs_faqs"
                        }
                    ]
                },
                {
                    "type": "header",
                    "content": "Section Title"
                },
                {
                    "id": "section_title_text",
                    "type": "text",
                    "label": "Section Title"
                },
                {
                    "id": "section_title_tag",
                    "type": "select",
                    "label": "Tag",
                    "default": "h2",
                    "options": [
                        {
                            "value": "h1",
                            "label": "<h1>"
                        },
                        {
                            "value": "h2",
                            "label": "<h2>"
                        },
                        {
                            "value": "h3",
                            "label": "<h3>"
                        },
                        {
                            "value": "h4",
                            "label": "<h4>"
                        },
                        {
                            "value": "h5",
                            "label": "<h5>"
                        },
                        {
                            "value": "h6",
                            "label": "<h6>"
                        },
                        {
                            "value": "div",
                            "label": "<div>"
                        },
                        {
                            "value": "span",
                            "label": "<span>"
                        }
                    ]
                },
                {
                    "id": "section_title_margin_bottom",
                    "label": "Bottom Margin",
                    "type": "range",
                    "min": 0,
                    "max": 20,
                    "step": 1,
                    "unit": "rem",
                    "default": 1
                },
                {
                    "id": "section_title_color",
                    "type": "color",
                    "label": "Font Color"
                },
                {
                    "type": "header",
                    "content": "Layout"
                },
                {
                    "id": "cols",
                    "type": "select",
                    "label": "Width",
                    "default": "12",
                    "options": [
                        {
                            "value": "4",
                            "label": "1\/3"
                        },
                        {
                            "value": "6",
                            "label": "1\/2"
                        },
                        {
                            "value": "8",
                            "label": "2\/3"
                        },
                        {
                            "value": "12",
                            "label": "Full width"
                        }
                    ]
                },
                {
                    "id": "margin_top",
                    "label": "Top Margin",
                    "type": "range",
                    "min": 0,
                    "max": 20,
                    "step": 1,
                    "unit": "rem",
                    "default": 5
                },
                {
                    "id": "margin_bottom",
                    "label": "Bottom Margin",
                    "type": "range",
                    "min": 0,
                    "max": 20,
                    "step": 1,
                    "unit": "rem",
                    "default": 5
                },
                {
                    "type": "header",
                    "content": "Widget Settings"
                },
                {
                    "id": "widget_height_speed",
                    "type": "range",
                    "min": 0,
                    "max": 2000,
                    "step": 50,
                    "unit": "ms",
                    "label": "Height Speed",
                    "default": 0,
                    "info": "Animate the change of tab heights when the user switches between tabs."
                },
                {
                    "id": "widget_fade_speed",
                    "type": "range",
                    "min": 0,
                    "max": 2000,
                    "step": 50,
                    "unit": "ms",
                    "label": "Fade Speed",
                    "default": 0,
                    "info": "Fade between tabs when the user changes tabs."
                },
                {
                    "type": "header",
                    "content": "Title Settings"
                },
                {
                    "id": "title_font_size",
                    "type": "range",
                    "min": 8,
                    "max": 60,
                    "step": 1,
                    "unit": "px",
                    "label": "Font size",
                    "default": 18
                },
                {
                    "id": "title_font_color",
                    "type": "color",
                    "label": "Font Color"
                },
                {
                    "id": "title_font_custom",
                    "label": "Customize the title font",
                    "type": "checkbox",
                    "default": false
                },
                {
                    "id": "title_font",
                    "type": "font_picker",
                    "label": "Custom Title Font",
                    "default": "helvetica_n4"
                },
                {
                    "id": "title_padding",
                    "type": "text",
                    "label": "Padding",
                    "default": "12px 25px"
                },
                {
                    "type": "header",
                    "content": "Body Settings"
                },
                {
                    "id": "body_font_size",
                    "type": "range",
                    "min": 8,
                    "max": 60,
                    "step": 1,
                    "unit": "px",
                    "label": "Font size",
                    "default": 16
                },
                {
                    "id": "body_font_color",
                    "type": "color",
                    "label": "Font Color"
                },
                {
                    "id": "body_padding",
                    "type": "text",
                    "label": "Padding",
                    "default": "25px"
                }
            ]
        }
    ]
}
{% endschema %}
